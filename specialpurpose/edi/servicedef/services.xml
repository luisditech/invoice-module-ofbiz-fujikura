<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>EDI Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service> 
    
    <!-- Get Secuencia -->     
    <service name="serviceGetNextSeqId" default-entity-name="EdiConfiguration" export="true" engine="java" 
    	    location="com.fae.EDI.services.EDISequenceCreateService" invoke="jServiceGetNextSeqId" auth="false">
    	    <description>get Next seq Id</description>
        <attribute name="seqName" type="String" mode="IN" optional="false"/>
        <attribute name="nextSeqId" type="String" mode="OUT" optional="true"/>
    </service>    

    <!-- Call Secuencia -->
    <service name="serviceCallGetNextSeqId" export="true" engine="java" 
    	    location="com.fae.EDI.services.EDISequenceCreateService" invoke="getNextSeqIdPrueba" auth="false">     
    </service>           
    
    <!-- ************* -->
    <!-- Configuration -->
    <!-- ************* -->

    <!-- Create ofBiz -->
 	<service name="srvCreateConfiguration" default-entity-name="EdiConfiguration" engine="entity-auto" invoke="create" auth="true">
        <description>Create an Configuration record</description>
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="cfgObs" optional="true"/>
    </service>

    <service name="srvNewConfigurationNoJava" default-entity-name="EdiConfiguration" engine="entity-auto" invoke="create" auth="true">        
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>

	<!-- Create Java -->
	<service name="srvCreateConfigurationByJava" default-entity-name="EdiConfiguration" engine="java"
    	    location="com.fae.EDI.services.ConfigurationServices" invoke="jCreateEdiConfiguration" auth="true">
	    <description>Create an Configuration record using a service in Java</description>
	    <auto-attributes include="pk" mode="OUT" optional="false"/>
	    <auto-attributes include="nonpk" mode="IN" optional="false"/>
	    <override name="cfgObs" optional="true"/>
	</service>
	
	<!-- Update Java -->	
	<service name="srvUpdateConfigurationByJava" default-entity-name="EdiConfiguration" engine="java"
    	    location="com.fae.EDI.services.ConfigurationServices" invoke="jUpdateEdiConfiguration" auth="true">
	    <description>Update an Configuration record using a service in Java</description>
	    <auto-attributes include="pk" mode="IN" optional="false"/>
	    <auto-attributes include="nonpk" mode="IN" optional="false"/>
	    <override name="cfgObs" optional="true"/>
	</service>   	
	
	<!-- Delete Java -->	
	<service name="srvDeleteConfigurationByJava" default-entity-name="EdiConfiguration" engine="java"
    	    location="com.fae.EDI.services.ConfigurationServices" invoke="jDeleteEdiConfiguration" auth="true">
	    <description>Delete an Configuration record using a service in Java</description>
	    <auto-attributes include="pk" mode="IN" optional="false"/>
	    <override name="cfgObs" optional="true"/>
	</service> 	    
    
    <service name="srvDeleteConfigurationNoJava" default-entity-name="EdiConfiguration" engine="entity-auto" invoke="delete" auth="true">               
        <auto-attributes include="pk" mode="IN" optional="false"/>
         <override name="cfgObs" optional="true"/>
    </service>    
    
</services>