<?xml version="1.0" encoding="UTF-8"?>
<ofbiz-component name="invoice"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">

    <resource-loader name="main" type="component"/>

    <classpath type="dir" location="config"/>

    <!-- ENTITIES -->
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml"/>
    <entity-resource type="data"  reader-name="main" loader="main" location="data/InvoiceData.xml"/>

    <!-- Demo/mock data -->
    <entity-resource type="data" reader-name="seed" loader="main" location="data/InvoiceEnumData.xml"/>
    <entity-resource type="data" reader-name="seed" loader="main" location="data/FinInvoiceMockSeed.xml"/>
    <entity-resource type="data" reader-name="seed" loader="main" location="data/FinInvoiceLineMockSeed.xml"/>

    <!-- SERVICES (solo type="model" es válido aquí) -->
    <service-resource type="model" loader="main" location="servicedef/services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_Invoice_CRUD.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_Invoice_Find.xml"/>

    <!-- WEBAPP -->
    <webapp name="invoice"
            title="Invoice"
            server="default-server"
            location="webapp/invoice"
            mount-point="/invoice"/>

</ofbiz-component>
