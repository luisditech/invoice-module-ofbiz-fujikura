<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns="http://ofbiz.apache.org/Site-Conf"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">

    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>

    <description>Invoice Component Site Configuration File</description>

    <!-- Events to run on every request before security (chains exempt) -->
    <!--
    <preprocessor>
    </preprocessor>
    -->

    <!-- Events to run on every request after all other processing (chains exempt) -->
    <!--
    <postprocessor>
        <event name="test" type="java" path="org.apache.ofbiz.webapp.event.TestEvent" invoke="test"/>
    </postprocessor>
    -->

    <!-- **************** -->
    <!-- **************** -->
    <!-- Request Mappings -->
    <!-- **************** -->
    <!-- **************** -->

    <!-- main -->
    <request-map uri="main">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="main"/>
    </request-map>

    <!-- ======= -->
    <!-- Invoice -->
    <!-- ======= -->

    <!-- find (búsqueda/listado) -->
    <!-- Mantiene el target 'findInvoices' usado por el form -->
    <request-map uri="findInvoices">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="viewFindInvoices"/>
    </request-map>

    <!-- Ver solo cabecera -->
    <request-map uri="viewInvoiceHeader">
        <security auth="true" https="true"/>
        <response name="success" type="view" value="ViewInvoiceHeader"/>
    </request-map>

    <!-- view (detalle) -->
    <!-- Soporta ambos targets usados en la UI: 'viewInvoiceDetail' y 'viewInvoice' -->
    <request-map uri="viewInvoiceDetail">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="ViewInvoiceDetail"/>
    </request-map>

    <request-map uri="viewInvoiceLines">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="ViewInvoiceLines"/>
    </request-map>

    <request-map uri="viewInvoice">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="viewViewInvoice"/>
    </request-map>

    <!-- edit (alta/edición de cabecera) -->
    <!-- Menú apunta a 'editInvoice' -->
    <request-map uri="editInvoice">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="viewEditInvoice"/>
    </request-map>

    <!-- create/update/delete (cabecera) -->
    <request-map uri="createInvoice">
        <security https="true" auth="true"/>
        <event type="service" invoke="createFinInvoice"/>
        <response name="success" type="view" value="viewViewInvoice"/>
        <response name="error"   type="view" value="viewEditInvoice"/>
    </request-map>

    <request-map uri="updateInvoice">
        <security https="true" auth="true"/>
        <event type="service" invoke="updateFinInvoice"/>
        <response name="success" type="view" value="viewViewInvoice"/>
        <response name="error"   type="view" value="viewEditInvoice"/>
    </request-map>

    <request-map uri="deleteInvoice">
        <security https="true" auth="true"/>
        <event type="service" invoke="deleteFinInvoice"/>
        <response name="success" type="view" value="viewFindInvoices"/>
        <response name="error"   type="view" value="viewViewInvoice"/>
    </request-map>

    <!-- ============ -->
    <!-- InvoiceLine -->
    <!-- ============ -->

    <!-- edit línea -->
    <request-map uri="editInvoiceLine">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="viewEditInvoiceLine"/>
    </request-map>

    <!-- create/update/delete línea -->
    <request-map uri="createInvoiceLine">
        <security https="true" auth="true"/>
        <event type="service" invoke="createFinInvoiceLine"/>
        <response name="success" type="view" value="viewViewInvoice"/>
        <response name="error"   type="view" value="viewEditInvoiceLine"/>
    </request-map>

    <request-map uri="updateInvoiceLine">
        <security https="true" auth="true"/>
        <event type="service" invoke="updateFinInvoiceLine"/>
        <response name="success" type="view" value="viewViewInvoice"/>
        <response name="error"   type="view" value="viewEditInvoiceLine"/>
    </request-map>

    <request-map uri="deleteInvoiceLine">
        <security https="true" auth="true"/>
        <event type="service" invoke="deleteFinInvoiceLine"/>
        <response name="success" type="view" value="viewViewInvoice"/>
        <response name="error"   type="view" value="viewViewInvoice"/>
    </request-map>

    <!-- Abre el formulario de edición rápida -->
    <request-map uri="editInvoiceLineQuick">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="EditInvoiceLineQuick"/>
    </request-map>

    <!-- Ejecuta el update usando el service estándar updateFinInvoiceLine -->
    <request-map uri="updateFinInvoiceLineQuick">
        <security https="true" auth="true"/>
        <event type="service" invoke="updateFinInvoiceLine"/>

        <!-- OK -->
        <response name="success" type="request-redirect" value="viewInvoiceLines">
            <!-- coge el OUT del service (tu field-to-result deja 'invoiceId' en el contexto) -->
            <redirect-parameter name="invoiceId" from-field="invoiceId"/>
        </response>

        <!-- Error (por si el service no devuelve OUT) -->
        <response name="error" type="request-redirect" value="viewInvoiceLines">
            <!-- tira del parámetro de entrada -->
            <redirect-parameter name="invoiceId" from-field="parameters.invoiceId"/>
            <redirect-parameter name="errorMessage" from-field="_ERROR_MESSAGE_"/>
        </response>
    </request-map>


    <!-- ************* -->
    <!-- ************* -->
    <!-- View Mappings -->
    <!-- ************* -->
    <!-- ************* -->

    <view-map name="ViewInvoiceHeader"
              type="screen"
              page="component://invoice/widget/screens/InvoiceScreens.xml#ViewInvoiceHeader"/>

    <view-map name="ViewInvoiceDetail" type="screen"
              page="component://invoice/widget/screens/InvoiceScreens.xml#ViewInvoiceHeader"/>

    <view-map name="ViewInvoiceLines" type="screen"
              page="component://invoice/widget/screens/InvoiceScreens.xml#ViewInvoice"/>

    <!-- main -->
    <view-map name="main" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#main"/>

    <!-- Invoice / find -->
    <view-map name="viewFindInvoices" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#main"/>

    <!-- Invoice / view -->
    <view-map name="viewViewInvoice" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#ViewInvoice"/>

    <!-- Invoice / edit -->
    <view-map name="viewEditInvoice" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#EditInvoice"/>

    <!-- InvoiceLine / edit -->    <!-- InvoiceLine / edit -->
    <view-map name="viewEditInvoiceLine"
              type="screen"
              page="component://invoice/widget/screens/InvoiceScreens.xml#EditInvoiceLine"/>

    <!-- Vista (screen) que muestra el form de edición -->
    <view-map name="EditInvoiceLineQuick"
              type="screen"
              page="component://invoice/widget/screens/InvoiceScreens.xml#EditInvoiceLineQuick"/>

</site-conf>
