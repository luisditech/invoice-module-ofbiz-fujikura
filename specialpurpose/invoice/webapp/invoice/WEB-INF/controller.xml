<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://ofbiz.apache.org/Site-Conf"
           xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">

    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
    <description>Invoice Component Site Configuration File</description>

    <!-- Request/View: main -->
    <request-map uri="main">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="main"/>
    </request-map>
    <view-map name="main" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#main"/>

    <!-- Request/View: findInvoices -->
    <!--<request-map uri="findInvoices">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="FindInvoices"/>
    </request-map>
    <view-map name="FindInvoices" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#main"/>-->

    <!-- MOCK FIND INVOICES -->
    <request-map uri="findInvoices">
        <security https="true" auth="true"/>
        <event type="service" invoke="findFinInvoicesMocked"/>
        <response name="success" type="view" value="FindInvoices"/>
    </request-map>
    <view-map name="FindInvoices" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#main"/>

    <!-- Request/View: viewInvoiceDetail -->
    <request-map uri="viewInvoiceDetail">
        <security https="true" auth="true"/>
        <event type="service" invoke="getInvoiceDetailData"/>
        <response name="success" type="view" value="ViewInvoice"/>
    </request-map>
    <view-map name="ViewInvoice" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#ViewInvoice"/>

    <!-- Request/View: ctrlEditInvoice -->
    <request-map uri="ctrlEditInvoice">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="vEditInvoice"/>
    </request-map>
    <view-map name="vEditInvoice" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#EditInvoice"/>

    <!-- Request/View: ctrlEditInvoiceLine -->
    <request-map uri="ctrlEditInvoiceLine">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="vEditInvoiceLine"/>
    </request-map>
    <view-map name="vEditInvoiceLine" type="screen" page="component://invoice/widget/screens/InvoiceScreens.xml#EditInvoiceLine"/>

    <!-- Request: createInvoice -->
    <request-map uri="createInvoice">
        <security https="true" auth="true"/>
        <event type="service" invoke="createFinInvoice"/>
        <response name="success" type="view" value="vViewInvoice"/>
        <response name="error" type="view" value="vEditInvoice"/>
    </request-map>

    <!-- Request: updateInvoice -->
    <request-map uri="updateInvoice">
        <security https="true" auth="true"/>
        <event type="service" invoke="updateFinInvoice"/>
        <response name="success" type="view" value="vViewInvoice"/>
        <response name="error" type="view" value="vEditInvoice"/>
    </request-map>

    <!-- Request: deleteInvoice -->
    <request-map uri="deleteInvoice">
        <security https="true" auth="true"/>
        <event type="service" invoke="deleteFinInvoice"/>
        <response name="success" type="view" value="FindInvoices"/>
        <response name="error" type="view" value="vViewInvoice"/>
    </request-map>

    <!-- Request: createInvoiceLine -->
    <request-map uri="createInvoiceLine">
        <security https="true" auth="true"/>
        <event type="service" invoke="createFinInvoiceLine"/>
        <response name="success" type="view" value="vViewInvoice"/>
        <response name="error" type="view" value="vEditInvoiceLine"/>
    </request-map>

    <!-- Request: updateInvoiceLine -->
    <request-map uri="updateInvoiceLine">
        <security https="true" auth="true"/>
        <event type="service" invoke="updateFinInvoiceLine"/>
        <response name="success" type="view" value="vViewInvoice"/>
        <response name="error" type="view" value="vEditInvoiceLine"/>
    </request-map>

    <!-- Request: deleteInvoiceLine -->
    <request-map uri="deleteInvoiceLine">
        <security https="true" auth="true"/>
        <event type="service" invoke="deleteFinInvoiceLine"/>
        <response name="success" type="view" value="vViewInvoice"/>
        <response name="error" type="view" value="vViewInvoice"/>
    </request-map>

</site-conf>
