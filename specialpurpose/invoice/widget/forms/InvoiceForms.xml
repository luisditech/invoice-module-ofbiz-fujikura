    <form name="FindInvoicesForm"
          type="single"
          target="findInvoices"
          default-table-style="condensed-table"
          header-row-style="header-row-single"
          default-title-style="inv-label"
          default-widget-style="inv-input">

        <!-- Necesario para performFind / prepareFind -->
        <field name="entityName">
            <hidden value="FinInvoice"/>
        </field>
        <field name="noConditionFind">
            <hidden value="Y"/>
        </field>
        <field name="componentName">
            <hidden value="invoice"/>
        </field>

        <!-- Fila 1 -->
        <field name="invSupplierVatNumber" title="Supplier VAT Number" position="1">
            <text-find/>
        </field>
        <field name="invSupplierName" title="Supplier Name" position="2">
            <text-find/>
        </field>

        <!-- Fila 2 -->
        <field name="invSupplierCode" title="Supplier Code" position="1">
            <text-find/>
        </field>
        <field name="invInvoiceNumber" title="Invoice Number" position="2">
            <text-find/>
        </field>

        <!-- Fila 3 -->
        <field name="invInvoiceDateFrom" title="Invoice Date From" position="1">
            <date-find type="date"/>
        </field>
        <field name="invInvoiceDateTo" title="Invoice Date To" position="2">
            <date-find type="date"/>
        </field>

        <!-- Fila 4 -->
        <field name="invValueDateFrom" title="Value Date From" position="1">
            <date-find type="date"/>
        </field>
        <field name="invValueDateTo" title="Value Date To" position="2">
            <date-find type="date"/>
        </field>

        <!-- Fila 5 -->
        <field name="invPaymentDueDateFrom" title="Payment Due Date From" position="1">
            <date-find type="date"/>
        </field>
        <field name="invPaymentDueDateTo" title="Payment Due Date To" position="2">
            <date-find type="date"/>
        </field>

        <!-- Fila 6 -->
        <field name="invTaxType" title="Tax Type" position="1">
            <text-find/>
        </field>
        <field name="invTaxRate" title="Tax Rate" position="2">
            <text-find/>
        </field>

        <!-- Fila 7 -->
        <field name="invCurrency" title="Currency" position="1">
            <text-find/>
        </field>
        <field name="invPaymentMethod" title="Payment Method" position="2">
            <text-find/>
        </field>

        <!-- Fila 8 -->
        <field name="invNetAmountFrom" title="Net Amount From" position="1">
            <text-find/>
        </field>
        <field name="invNetAmountTo" title="Net Amount To" position="2">
            <text-find/>
        </field>

        <!-- Fila 9 -->
        <field name="invConfirmed" title="Confirmed" position="1">
            <drop-down allow-empty="true">
                <option key="Y" description="${uiLabelMap.CommonYes}"/>
                <option key="N" description="${uiLabelMap.CommonNo}"/>
            </drop-down>
        </field>
        <field name="invPaymentDone" title="Payment Done" position="2">
            <drop-down allow-empty="true">
                <option key="Y" description="${uiLabelMap.CommonYes}"/>
                <option key="N" description="${uiLabelMap.CommonNo}"/>
            </drop-down>
        </field>

        <!-- Fila 10: botones a la derecha -->
        <field name="submitButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit">
            <submit/>
        </field>
        <field name="clearButton" title=" " widget-style="smallSubmit">
            <hyperlink target="findInvoices" description="${uiLabelMap.CommonClear}"/>
        </field>
    </form>


