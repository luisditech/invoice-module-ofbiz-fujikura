    <!-- FORM EDIT LINES -->
    <!-- =============================== -->
    <!-- Quick Edit de 5 campos de línea -->
    <!-- =============================== -->
    <form name="EditInvoiceLineQuick"
          type="single"
          target="updateFinInvoiceLineQuick"
          default-map-name="line"
          header-row-style="header-row-single"
          default-table-style="basic-table">

        <!-- IDs necesarios para el update -->
        <field name="invoiceId"><hidden/></field>
        <field name="invoiceLineSeqId"><hidden/></field>

        <!-- Proof (texto libre) -->
        <field name="lineProof" title="Proof"><text/></field>



        <!-- Cost Center -->
        <field name="lineCc" title="Cost Center" use-when="!security.hasPermission('INVOICE_UPDATE', session)">
            <display/>
        </field>

        <field name="lineCc" title="Cost Center" use-when="security.hasPermission('INVOICE_UPDATE', session)">
            <drop-down allow-empty="true">
                <entity-options
                        entity-name="Enumeration"
                        key-field-name="enumId">
                    <!-- Si guardas 'CC001', 'CC002'... deja estos tipos/tags: -->
                    <entity-constraint name="enumTypeId" value="INV_COST_CENTER"/>
                </entity-options>
            </drop-down>
        </field>

        <!-- Branch -->
        <field name="lineBranch" title="Branch" use-when="!security.hasPermission('INVOICE_UPDATE', session)">
            <display/>
        </field>

        <field name="lineBranch" title="Branch" use-when="security.hasPermission('INVOICE_UPDATE', session)">
            <drop-down allow-empty="true">
                <entity-options
                        entity-name="Enumeration"
                        key-field-name="enumId">
                    <!-- Si en DB guardas 'Main', 'North', 'South', 'East',
                         crea enumId EXACTAMENTE con esos textos -->
                    <entity-constraint name="enumTypeId" value="INV_BRANCH"/>
                </entity-options>
            </drop-down>
        </field>

        <!-- Project -->
        <field name="lineProject" title="Project" use-when="!security.hasPermission('INVOICE_UPDATE', session)">
            <display/>
        </field>

        <field name="lineProject" title="Project" use-when="security.hasPermission('INVOICE_UPDATE', session)">
            <drop-down allow-empty="true">
                <entity-options
                        entity-name="Enumeration"
                        key-field-name="enumId">
                    <!-- Si en DB guardas 'Project Alpha', 'Project Beta', etc.,
                         pon esos enumId para preselección automática -->
                    <entity-constraint name="enumTypeId" value="INV_PROJECT"/>
                </entity-options>
            </drop-down>
        </field>

        <!-- Section -->
        <field name="lineSection" title="Section" use-when="!security.hasPermission('INVOICE_UPDATE', session)">
            <display/>
        </field>

        <field name="lineSection" title="Section" use-when="security.hasPermission('INVOICE_UPDATE', session)">
            <drop-down allow-empty="true">
                <entity-options
                        entity-name="Enumeration"
                        key-field-name="enumId">
                    <!-- Si en DB guardas 'Hardware', 'Accessories', ... usa esos enumId -->
                    <entity-constraint name="enumTypeId" value="INV_SECTION"/>
                </entity-options>
            </drop-down>
        </field>

        <!-- Botón -->
        <field name="submitButton" title="${uiLabelMap.CommonUpdate}" use-when="security.hasPermission('INVOICE_UPDATE', session)">
            <submit/>
        </field>
    </form>

    <!-- Tarjeta compacta como el mock -->
    <form name="InvoiceSummary"
          type="single"
          default-map-name="invoice"
          default-table-style="condensed-table"
          header-row-style="header-row-single">

        <!-- Fila 1 -->
        <field name="invInvoiceNumber"      title="Invoice Number"          position="1"><display/></field>
        <field name="invSupplierVatNumber"  title="Supplier VAT Number"     position="2"><display/></field>
        <field name="invSupplierName"       title="Supplier Name"           position="3"><display/></field>

        <!-- Fila 2 -->
        <field name="invTaxType"            title="Tax Type"                position="1"><display/></field>
        <field name="invIva"                title="Tax Rate"                position="2"><display/></field>
        <field name="invCurrency"           title="Currency"                position="3"><display/></field>

        <!-- Fila 3 -->
        <field name="invPaymentMethod"      title="Payment Method"          position="1"><display/></field>
        <field name="invInvoiceDate"        title="Invoice Date"            position="2"><display/></field>
        <field name="invValueDate"          title="Value Date"              position="3"><display/></field>

        <!-- Fila 4 -->
        <field name="invPaymentDueDate"     title="Payment Due Date"        position="1"><display/></field>
        <field name="invAmountWithoutVat"   title="Amount without VAT"      position="2"><display/></field>
        <field name="invTotalVatAmount"     title="Total VAT Amount"        position="3"><display/></field>

        <!-- Fila 5 -->
        <field name="invTotalAmountWithVat" title="Total Amount (with VAT)" position="1"><display/></field>
